<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>
  </head>

  <body>
    <%= render 'shared/home' %>

    <%= render 'shared/authentication' %>

    <div class="container" id="main-layout">
      <div class="row">
        <div class="col-md-4 col-sm-4 main-nav" style="position:relative;">
          <% BitPlayer::Tool.all.each do |tool|  %>
            <%= assign_tool(@navigator.context, tool)%>
            <%= caret(@navigator.context, tool) %>
          <% end %>
        </div>
        <div class="col-md-7 col-sm-5 main-content">
          <%= yield %>
        </div>
      </div>

      <div class="row" id="alerts">
        <%= render 'shared/alerts' %>
      </div>

      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
