<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>
  </head>

  <body>
    <%= render 'shared/home' %>

    <%= render 'shared/authentication' %>

    <div class="container" id="main-layout">
      <div class="row">
        <div class="col-md-5 col-sm-5 main-nav">
          <% AppSection.all.each do |s| %>
            <% if @navigator.context == s.slug %>
              <% text = "#{s.label} #{fa_icon('caret-right')}" %>
            <% elsif @navigator.context != s.slug and assign_tool(current_participant, s.slug)%>
              <% text = "#{fa_icon('asterisk')} #{s.label}" %>
            <% else %>
              <% text = "#{s.label}" %>
            <% end %>
            <%= link_to text.html_safe, navigator_context_path(context_name: s.slug) %>
          <% end %>
        </div>
        
        <div class="col-md-7 col-sm-5 main-content">
          <%= yield %>
        </div>
      </div>

      <div class="row" id="alerts">
        <%= render 'shared/alerts' %>
      </div>

      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
