<% slide = slide || @slide %>
<% if slide.is_title_visible %>
  <div class="slide">
    <h1><%= slide.title %></h1>
    <div class="btn-toolbar">
      <%= link_to "Edit", edit_slideshow_slide_path(slide.slideshow, slide), class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<%= slide.render_body %>

<% case slide.class.to_s %>
<% when 'VideoSlide' %>
  <%= render 'slides/video', slide: slide %>
<% end %>