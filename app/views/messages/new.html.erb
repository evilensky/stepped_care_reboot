<%= form_for message, url: create_path, method: "post", html: { role: "form" } do |f| %>
  <div class="form-group">
    <label class="control-label">To</label>
    <p class="form-control-static">Your coach</p>
    <%= f.hidden_field :recipient_id %>
    <%= f.hidden_field :recipient_type %>
  </div>

  <div class="form-group">
    <label for="message_subject" class="control-label">Subject</label>
    <%= f.text_field :subject, required: true, class: "form-control .col-xs-12 .col-sm-6 .col-md-6 .col-lg-4" %>
  </div>

  <div class="form-group">
    <label for="message_body" class="control-label">Message</label>
    <%= f.text_area :body, class: "form-control .col-xs-12 .col-sm-6 .col-md-6 .col-lg-4" %>
  </div>

  <button type="submit" class="btn btn-default">Send</button>
<% end %>
