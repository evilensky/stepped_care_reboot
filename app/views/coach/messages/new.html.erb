<%= form_for [:coach, message], html: { role: "form" } do |f| %>
  <div class="form-group">
    <label for="message_recipient_id" class="control-label">To</label>
    <%= f.select :recipient_id, participants.collect { |p| [p.email, p.id] } %>
    <%= f.hidden_field :recipient_type, value: 'Participant' %>
  </div>

  <div class="form-group">
    <label for="message_subject" class="control-label">Subject</label>
    <%= f.text_field :subject, required: true, class: "form-control .col-xs-12 .col-sm-6 .col-md-6 .col-lg-4" %>
  </div>

  <div class="form-group">
    <label for="message_body" class="control-label">Message</label>
    <%= f.text_area :body, class: "form-control .col-xs-12 .col-sm-6 .col-md-6 .col-lg-4" %>
  </div>

  <button type="submit" class="btn btn-default">Send</button>
<% end %>
